extends ../layout
block styles
    link(rel='stylesheet' type='text/css' href='stylesheets/login.css')
block content
    .content
        .card.card-container
            #message
                if message
                    em.text-center.text-danger= message
            form.form-signin(action='/signup' method='POST')
                .form-group
                    input#email.form-control(type='email' name='email' placeholder='Email address' required autofocus)
                .form-group
                    input#password.form-control(type='password' name='password' placeholder="Password" required)
                .form-group
                    button.btn.btn-primary.btn-block(type='submit') Sign Up
